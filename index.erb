<!doctype html>
<html>
  <head>
    <title><%= meta.title %></title>
    <meta charset="utf-8">
    <%#<meta name="viewport" content="width=1274, user-scalable=no">%>
    <meta name="viewport" content="width=680, user-scalable=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="css/screen.css">
    <link rel="stylesheet" href="css/pygments/<%= meta.pygments_style %>.css">
    <% meta.css.each do |css| %>
      <link rel="stylesheet" href="<%= css %>">
    <% end %>
  </head>
  <body class="list">
    <header class="caption">
      <h1><%= meta.title %></h1>
    </header>
    <% sections.each do |section| %>
      <% if section.number > 0 %>
        <div id="slide-<%= section.number %>-s" class="slide chapter">
          <div>
            <hgroup>
              <h2><%= section.title %></h2>
            </hgroup>
          </div>
        </div>
        <div id="slide-<%= section.number %>-toc" class="slide toc">
          <div>
            <hgroup>
              <h1><%= section.title %></h1>
              <h2>Inhalt</h2>
            </hgroup>
            <ol>
              <% section.slides.uniq(&:extract_title).each do |slide| %>
                <li><%= slide.extract_title %></li>
              <% end %>
            </ol>
            <footer>
              <%# meta.author %>
            </footer>
          </div>
        </div>
      <% end %>
      <% section.slides.each do |slide| %>
        <div id="slide-<%= section.number %>-<%= slide.number %>" class="slide <%= slide.classes %>">
          <div>
            <hgroup>
              <% title_slide = section.number == 0 && slide.number == 0 %>
              <% title, subtitle = title_slide ? [slide.extract_title, slide.extract_subtitle] : [section.title, slide.extract_title] %>
              <h1><%= slide.extract_title %></h1>
              <% if subtitle && !subtitle.empty? %>
                <h2><%= subtitle %></h2>
              <% end %>
            </hgroup>
            <%= slide.html %>
            <% unless section.number == 0 && slide.number == 0 %>
              <footer>
                <%# meta.author %>
              </footer>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
	<div class="progress"><div></div></div>
    <script src="js/jquery-2.1.0.min.js"></script>
    <script src="js/script.js"></script>
    <% meta.js.each do |js| %>
      <script src="<%= js %>"></script>
    <% end %>
  </body>
</html>
